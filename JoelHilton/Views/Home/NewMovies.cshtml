@{
    ViewData["Title"] = "Joel's Movies";
}
<h1>@ViewData["Title"]</h1>

@model MovieResponses

<h2>Enter in your Movie information here:</h2>

<form method="post">

    <div asp-validation-summary="All"></div>

    <label asp-for="Category">Select a Category:</label>
    <select asp-for="CategoryId">
        <option>Select a category</option>
        @foreach (Category c in ViewBag.Categories)
        {
            <option value="@c.CategoryId">@c.CategoryName</option>
        }
    </select><br />

    <label asp-for="Title">Title:</label>
    <input asp-for="Title" /><br />

    <label asp-for="Year">Year:</label>
    <input asp-for="Year" /><br />

    <label asp-for="Director">Director:</label>
    <input asp-for="Director" /><br />

    <label asp-for="Rating">Rating:</label>
    <select asp-for="Rating">
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
    </select><br /><br />

    <label asp-for="Edited">Was the movie edited for this viewing?</label>
    <select asp-for="Edited">
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select><br />

    <label asp-for="LentTo">Was this movie lent to anyone? Who?</label>
    <input asp-for="LentTo" /><br />

    <label asp-for="Notes">Are there any breif notes you would like to add to this title?</label>
    <input asp-for="Notes" /><br />
    <input type="hidden" asp-for="MovieId" />
    <button type="submit">Submit Application</button>
</form>