@{
    ViewData["Title"] = "Movies 'R Us";
}
<h1>@ViewData["Title"]</h1>

@model JoelHilton.Models.MovieResponses

<h2>Enter in your Movie information here:</h2>

<form method="post">
    <label asp-for="Category">Select a Category:</label>
    <select asp-for="Category" name="category" size="3">
        <option value="Action/Adventure">Action/Adventure</option>
        <option value="Comedy">Comedy</option>
        <option value="Drama">Drama</option>
        <option value="Family">Family</option>
        <option value="Horror/Suspense">Horror/Suspense</option>
        <option value="Miscellaneous">Miscellaneous</option>
        <option value="Television">Television</option>
        <option value="VHS">VHS</option>
    </select>

    <label asp-for="Title">Title:</label>
    <input asp-for="Title" /><br />

    <label asp-for="Year">Year:</label>
    <input asp-for="Year" /><br />

    <label asp-for="Director">Director:</label>
    <input asp-for="Director" /><br />

    <label asp-for="Rating">Rating:</label>
    <select asp-for="Rating">
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
    </select><br /><br />

    <label asp-for="Edited">Was the movie edited for this viewing?</label>
    <select asp-for="Edited">
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select><br /><br />

    <label asp-for="LentTo">Was this movie lent to anyone?</label>
    <input asp-for="LentTo" /><br />

    <label asp-for="Notes">Are there any breif notes you would like to add to this title?</label>
    <input asp-for="Notes" /><br />

    <button type="submit">Submit Application</button>
</form>